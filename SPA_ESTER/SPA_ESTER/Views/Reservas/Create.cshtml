@model ClassLibrary1.Reservas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nueva Reserva</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row pt-3">
            <div class="col-md-6 form-group">
                @Html.LabelFor(model => model.id_empleados, "IDEmpleado", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("id_empleados", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_empleados, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6 form-group ">
                @Html.LabelFor(model => model.id_clientes, "ID Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("id_clientes", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_clientes, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="row pt-3">
            <div class="col-md-6 form-group ">
                @Html.LabelFor(model => model.id_metodos_pg, "ID Metodo", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("id_metodos_pg", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_metodos_pg, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="row pt-3">
            <div class="col-md-6 form-group ">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <!-- Botón de Crear con estilo de Bootstrap -->
                        <input type="submit" value="Crear" class="btn btn-primary" /> |
                        <a href="@Url.Action("Index")" class="btn btn-primary">Regresar</a>
                    </div>
                </div>
            </div>

        </div>

        
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
