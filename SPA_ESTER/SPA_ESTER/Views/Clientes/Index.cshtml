@model IEnumerable<ClassLibrary1.Clientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Teléfono
        </th>
        <th>
            Dirección
        </th>
        <th>
            Correo
        </th>
        <th>
            Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_cl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teléfono_cl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dirección_cl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo_cl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.usuario)
        </td>
        <td>
            <!-- Enlace "Actualizar" estilizado como un botón -->
            @Html.ActionLink("Actualizar", "Edit", new { id = item.id_clientes }, new { @class = "btn btn-primary btn-sm" }) |

            <!-- Enlace "Consultar" estilizado como un botón -->
            @Html.ActionLink("Consultar", "Details", new { id = item.id_clientes }, new { @class = "btn btn-primary btn-sm" }) |

            <!-- Enlace "Eliminar" estilizado como un botón -->
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_clientes }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
