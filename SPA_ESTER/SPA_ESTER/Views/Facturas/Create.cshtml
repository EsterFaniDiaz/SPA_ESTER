@model ClassLibrary1.Facturas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Nueva Facturas</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row pt-3">
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.id_factura, "Factura", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.id_factura, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.id_factura, "", new { @class = "text-danger" })

        </div>

        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.id_reservas, "Reservas", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("id_reservas", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_reservas, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-6 form-group">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <!-- Botón de Crear con estilo de Bootstrap -->
                    <input type="submit" value="Generar" class="btn btn-primary" /> |
                    <a href="@Url.Action("Index")" class="btn btn-primary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
