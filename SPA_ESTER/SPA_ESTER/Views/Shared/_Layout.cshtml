<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @*Scripts.Render("~/bundles/modernizr")*@
    <style>
        .navbar.navbar-expand.navbar-dark.bg-dark {
            background-color: #06778A !important;
        }

        .sb-sidenav.sb-sidenav-dark {
            background-color: #06778A !important;
        }

    </style>

</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html">SPA HARMONY</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                    <li><a class="dropdown-item" href="#!">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>



    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <a class="nav-link" href="@Url.Action("Index","Usuarios")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Usuario
                        </a>


                        <a class="nav-link" href="@Url.Action("Index","Reservas")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Reservas
                        </a>

                        <a class="nav-link" href="@Url.Action("Index","Facturas")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Facturas
                        </a>

                        <a class="nav-link" href="@Url.Action("Index","Clientes")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Clientes
                        </a>

                        <a class="nav-link" href="@Url.Action("Index","Servicios")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Servicios
                        </a>


                        <a class="nav-link" href="@Url.Action("Index","Metodos_Pago")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Metod_pag
                        </a>


                        <a class="nav-link" href="@Url.Action("Index","Empleados")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Empleados

                        </a>


                    </div>
                </div>
               
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">

                    @RenderBody()

                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">

                    </div>
                </div>
            </footer>
        </div>
    </div>





    @* <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
