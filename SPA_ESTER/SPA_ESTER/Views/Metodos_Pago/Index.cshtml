@model IEnumerable<ClassLibrary1.Metodos_Pago>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Metodos de pago</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            @Html.ActionLink("Actualizar", "Edit", new { id = item.id_metodos_pg }, new { @class = "btn btn-primary btn-sm" }) |

            <!-- Enlace "Consultar" estilizado como un botón -->
            @Html.ActionLink("Consultar", "Details", new { id = item.id_metodos_pg }, new { @class = "btn btn-primary btn-sm" }) |

            <!-- Enlace "Eliminar" estilizado como un botón -->
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_metodos_pg }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
